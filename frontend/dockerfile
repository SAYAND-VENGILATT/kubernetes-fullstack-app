# Build stage
FROM node:18-alpine AS builder

WORKDIR /app

# Copy package files first
COPY package*.json ./
RUN npm install

# Copy ALL source files including CSS
COPY . .

# Build the React app
RUN npm run build

# Production stage
FROM nginx:alpine

# Copy built React app to nginx
COPY --from=builder /app/build /usr/share/nginx/html

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]